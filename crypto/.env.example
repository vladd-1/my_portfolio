# Environment Configuration for Crypto Trading Bot
# Copy this file to .env and fill in your actual values

# WazirX API Credentials
# Get these from: https://wazirx.com/settings/keys
WAZIRX_API_KEY=your_api_key_here
WAZIRX_API_SECRET=your_api_secret_here

# Trading Mode
# Options: 'paper' (simulation) or 'live' (real trading)
TRADING_MODE=paper

# Risk Management Settings
MAX_POSITION_SIZE=100        # Maximum USD per position
MAX_DAILY_VOLUME=500         # Maximum USD traded per day
MAX_DAILY_LOSS=200           # Maximum USD loss per day (circuit breaker)
STOP_LOSS_PERCENTAGE=15      # Stop loss percentage per position
MAX_POSITIONS=10             # Maximum concurrent positions

# Trading Parameters
MIN_TRADE_SIZE=10            # Minimum trade size in USD
REBALANCE_THRESHOLD=10       # Rebalance when allocation drifts by this %
ANALYSIS_INTERVAL=3600       # Seconds between analysis runs (3600 = 1 hour)

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=25 # Stop trading if portfolio drops by this %

# Database
DB_PATH=trading_bot.db

# Logging
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs

# ============================================================
# IMPORTANT NOTES:
# ============================================================
# 1. Never commit the actual .env file to version control
# 2. Keep your API keys secure and never share them
# 3. Start with TRADING_MODE=paper to test without real money
# 4. Adjust risk parameters based on your risk tolerance
# 5. Lower values = more conservative trading
# ============================================================
